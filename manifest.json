{
  "manifest_version": 2,
  "name": "Github Repos Size",
  "version": "1.0",
  "description": "Display the size of any public Github repositories!",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "contextMenus",
    "webRequest",
    "webNavigation",
    "declarativeContent",
    "tabs",
    "https://api.github.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}